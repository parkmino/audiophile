1. sudo nano /etc/mpd.conf.sav

   mixer_type "none"
   size "487453268"

2. sudo nano /etc/rc.local

   echo 4095 > /sys/class/rtc/rtc0/max_user_freq || true
   sysctl -w dev.hpet.max-user-freq=4095         || true

   echo 4899053 | tee /sys/kernel/debug/sched/migration_cost_ns
   sysctl -w vm.max_map_count=672163
   sysctl -w net.ipv4.tcp_rmem='4641 88323 3345793'
   sysctl -w net.ipv4.tcp_wmem='4592 89973 3455766'

3. Adjtimex

   $ sudo apt-get install adjtimex
   $#sudo adjtimexconfig
   $#cat /etc/default/adjtimex
   $#sudo systemctl restart adjtimex
   $#adjtimex -p

   $ sudo nano /etc/rc.local
     [ ! -f /etc/default/adjtimex ] && adjtimexconfig && sudo systemctl restart adjtimex
     exit 0

   $ sudo rm -f /root/.bash_history ~/.bash_history /nohup.out /etc/default/adjtimex; history -c

4. Systemd-timesyncd

   $ sudo nano /etc/systemd/timesyncd.conf
