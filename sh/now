#!/bin/sh
cpu=$(grep 'cpu ' /proc/stat | awk '{printf 100*($2+$4)/($2+$4+$5)}')
mem=$(free | grep Mem | awk '{print 100*$3/$2}')
status=$(cat /sys/class/power_supply/BAT1/status)
charge=$(cat /sys/class/power_supply/BAT1/capacity)
ut=$(cat /proc/uptime | cut -d'.' -f1)
day=$(($ut/86400))
hrs=$(($ut%86400/3600))
min=$(($ut%3600/60))
sec=$(($ut%60))

#black=$(tput setaf 0)
#red=$(tput setaf 1)
#green=$(tput setaf 2)
#yellow=$(tput setaf 3)
#lime_yellow=$(tput setaf 190)
#powder_blue=$(tput setaf 153)
#blue=$(tput setaf 4)
#magenta=$(tput setaf 5)
#cyan=$(tput setaf 6)
#white=$(tput setaf 7)
#bright=$(tput bold)
#normal=$(tput sgr0)
#blink=$(tput blink)
#reverse=$(tput smso)
#underline=$(tput smul)

printf "$(date +'%Yë…„%-mì›”%-dì¼(%a) %p%-I:%M:%S')"
printf " | â±ï¸  %d+%02d:%02d:%02d | CPU $(tput setaf 4)%0.1f%%$(tput sgr0) | MEM $(tput setaf 4)%0.1f%%$(tput sgr0) |" $day $hrs $min $sec $cpu $mem

if [ "$status" = "Charging" ]; then
 printf " ğŸ”Œ "
elif [ "$status" = "Discharging" ]; then
 printf " ğŸ”‹ "
else
 printf " â”ï¸ "
fi

#printf "${green}$charge%%${normal}\n"

if [ $charge -lt 20 ] && [ $status != Charging ]; then
#printf " ğŸ˜“\n"
 printf "$(tput setaf 1)$charge%%$(tput sgr0)\n"
else
#printf " ğŸ™‚ï¸"
 printf "$(tput setaf 2)$charge%%$(tput sgr0)\n"
fi
